{
  "providers": {
    "ollama": {
      // Required
      "baseUrl": "http://localhost:11434",
      "model": "codellama:7b",

      // Optional
      "timeout": 30000,
      "keepAlive": "5m",           // Keep model loaded

      // Model-specific options
      "options": {
        "num_ctx": 8192,           // Context window
        "num_predict": 2048,       // Max output tokens
        "temperature": 0.7,
        "top_k": 40,
        "top_p": 0.9,
        "repeat_penalty": 1.1
      }
    }
  }
}